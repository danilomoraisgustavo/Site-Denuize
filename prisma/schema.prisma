generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
model DadosPessoais {
  id                Int               @id @default(autoincrement())
  primeiro_nome     String            @db.VarChar(50)
  sobrenome         String            @db.VarChar(50)
  data_nascimento   DateTime          @db.Date
  cpf               String            @db.VarChar(15)
  nome_responsavel  String            @db.VarChar(100)
  email             String            @db.VarChar(100)
  whatsapp          String            @db.VarChar(15)
  genero            String            @db.VarChar(20)
  logradouro        String            @db.VarChar(100)
  numero            Int
  bairro            String            @db.VarChar(50)
  complemento       String?           @db.VarChar(50)
  cidade            String            @db.VarChar(50)
  estado            String            @db.VarChar(50)
  cep               String            @db.VarChar(10)
  DetalhesCurso     DetalhesCurso[]
}

model DetalhesCurso {
  id                 Int            @id @default(autoincrement())
  id_dados_pessoais  Int
  curso_escolhido    String         @db.VarChar(50)
  experiencia_danca  String?        @db.Text
  objetivos          String?        @db.Text
  preferencias_aula  String         @db.VarChar(100)
  informacoes_medicas String?       @db.Text
  numero_matricula   String         @db.VarChar(6)
  dadosPessoais      DadosPessoais  @relation(fields: [id_dados_pessoais], references: [id])
}